{
  "name": "@anissoft/react-helpers",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.1.6",
  "description": "",
  "keywords": [],
  "main": "dist/react-helpers.umd.js",
  "module": "dist/react-helpers.es5.js",
  "typings": "dist/types/react-helpers.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "https://github.com/Anissoft/react-helpers"
  },
  "author": "Alexey Anisimov",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --config tslint.json --fix --project tsconfig.json",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.js && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.js -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish ",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "postinstall": "npm i ncp && ncp ./dist/lib/src/ ./",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "init": "ts-node tools/init"
  },
  "lint-staged": {
    "{src,test}/**/*.tsx?": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.11.0",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "@types/react-router": "^4.4.5",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "husky": "^1.0.1",
    "jest": "^24.5.0",
    "jest-config": "^23.6.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.3",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.1",
    "semantic-release": "^15.9.16",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^3.6.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-router": "^5.0.0"
  }
}
